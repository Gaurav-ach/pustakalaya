@model Pusthakalaya.Models.ApplicationUser

@{
    ViewData["Title"] = "View User Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /* Profile Container */
    .profile-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: 1.5rem 1rem;
        background: linear-gradient(180deg, #fefce8, #f5e6b8); /* Light amber gradient */
        border-radius: 12px;
    }

        /* Heading */
        .profile-container h2 {
            font-size: 1.875rem; /* 2xl equivalent */
            font-weight: 700;
            color: #92400e; /* Dark amber-brown to match hero heading */
            margin-bottom: 1.5rem;
            text-align: center;
        }

    /* Profile Card */
    .profile-card {
        background: #fefce8; /* Light amber to match home page */
        border-radius: 12px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
        padding: 1.5rem;
        max-width: 500px; /* Slightly wider than forms */
        margin: 0 auto;
        border: 1px solid rgba(43, 108, 176, 0.2); /* Subtle blue border to tie into nav */
    }

    /* Profile Image */
    .profile-image-container {
        text-align: center;
        margin-bottom: 1rem;
    }

        .profile-image-container img {
            width: 8rem; /* 32 equivalent */
            height: 8rem;
            object-fit: cover;
            border-radius: 50%;
            margin: 0 auto;
        }

        .profile-image-container .no-image {
            width: 8rem;
            height: 8rem;
            background: #fef9c3; /* Lighter amber for placeholder */
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 50%;
            margin: 0 auto;
            color: #92400e; /* Dark amber for text */
            font-size: 1rem;
        }

    /* Profile Details */
    .profile-details {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
    }

        .profile-details dt {
            font-size: 1rem;
            font-weight: 600;
            color: #4b5563; /* Dark gray to match labels */
        }

        .profile-details dd {
            font-size: 1rem;
            color: #2d3748; /* Dark gray for primary text */
        }

    /* Back Button */
    .back-button-container {
        margin-top: 1.5rem;
        display: flex;
        justify-content: center;
    }

    .back-button {
        background: linear-gradient(to right, #2b6cb0, #4c51bf); /* Blue gradient to match nav */
        color: #ffffff;
        font-weight: 600;
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        transition: all 0.3s ease;
        text-align: center;
    }

        .back-button:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(76, 81, 191, 0.4);
            background: #1e40af; /* Darker blue on hover */
        }

    /* Dark Mode Adjustments */
    .dark .profile-container {
        background: linear-gradient(180deg, #4b5563, #2d3748); /* Darker shades for contrast */
    }

        .dark .profile-container h2 {
            color: #fefce8; /* Light amber for text */
        }

    .dark .profile-card {
        background: #2d3748; /* Dark gray to match home page dark mode */
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.3);
        border-color: rgba(96, 165, 250, 0.3); /* Light blue border in dark mode */
    }

    .dark .profile-image-container .no-image {
        background: #6b7280; /* Darker amber-gray for placeholder */
        color: #fefce8;
    }

    .dark .profile-details dt {
        color: #fefce8; /* Light amber for labels */
    }

    .dark .profile-details dd {
        color: #e2e8f0; /* Light gray for primary text */
    }

    .dark .back-button {
        background: linear-gradient(to right, #1e40af, #2b6cb0); /* Darker blue gradient */
    }

        .dark .back-button:hover {
            background: #4c51bf;
        }
</style>
<div class="container mx-auto px-4 py-6">
    <h2 class="text-2xl font-bold text-amber-900 mb-6 text-center">User Profile: @Model.UserName</h2>

    <div class="bg-amber-50 rounded-lg shadow-md p-6 max-w-lg mx-auto">
        <div class="text-center mb-4">
            @if (!string.IsNullOrEmpty(Model.ProfileImageUrl))
            {
                <img src="@Model.ProfileImageUrl" alt="@Model.UserName" class="w-32 h-32 object-cover rounded-full mx-auto" />
            }
            else
            {
                <div class="w-32 h-32 bg-gray-200 flex items-center justify-center rounded-full mx-auto">
                    <span class="text-gray-600">No Image</span>
                </div>
            }
        </div>
        <dl class="grid grid-cols-1 gap-4">
            <dt class="text-gray-700 font-semibold">Username</dt>
            <dd class="text-gray-600">@Model.UserName</dd>
            <dt class="text-gray-700 font-semibold">Email</dt>
            <dd class="text-gray-600">@Model.Email</dd>
            <dt class="text-gray-700 font-semibold">First Name</dt>
            <dd class="text-gray-600">@(Model.FirstName ?? "Not set")</dd>
            <dt class="text-gray-700 font-semibold">Last Name</dt>
            <dd class="text-gray-600">@(Model.LastName ?? "Not set")</dd>
            <dt class="text-gray-700 font-semibold">Roles</dt>
            <dd class="text-gray-600">@(string.Join(", ", ViewBag.Roles))</dd>
        </dl>
        <div class="mt-6 flex justify-center">
            <a asp-action="Index" class="inline-block bg-gray-500 text-white font-semibold py-2 px-4 rounded-lg hover:bg-gray-600">Back to Dashboard</a>
        </div>
    </div>
</div>