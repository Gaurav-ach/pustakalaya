@model Pusthakalaya.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /* Login Container */
    .login-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: calc(100vh - 200px);
        background: linear-gradient(180deg, #fefce8, #f5e6b8); /* Light amber gradient to match home page */
    }

    .login-card {
        background: #fefce8; /* Light amber to match home page */
        border-radius: 12px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        max-width: 400px; /* Slightly narrower for a compact login form */
        width: 100%;
    }

        /* Heading */
        .login-card h2 {
            font-size: 1.875rem; /* 2xl equivalent */
            font-weight: 700;
            color: #92400e; /* Dark amber-brown to match hero heading */
            margin-bottom: 1.5rem;
            text-align: center;
        }

    /* Form */
    .login-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    /* Form Group */
    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

        /* Labels */
        .form-group label {
            font-size: 1rem;
            font-weight: 600;
            color: #4b5563; /* Dark gray to match hero subtitle */
        }

        /* Inputs */
        .form-group input[type="email"],
        .form-group input[type="password"] {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #d1d5db; /* Light gray border */
            border-radius: 8px;
            font-size: 1rem;
            color: #2d3748; /* Dark gray text */
            background: #ffffff;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-group input[type="email"]:focus,
            .form-group input[type="password"]:focus {
                outline: none;
                border-color: #f5e6b8; /* Light amber border on focus */
                box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.2); /* Amber focus ring */
            }

        /* Checkbox */
        .form-group input[type="checkbox"] {
            height: 1rem;
            width: 1rem;
            accent-color: #f59e0b; /* Amber for checkbox */
            border-color: #d1d5db;
            border-radius: 4px;
            cursor: pointer;
        }

            .form-group input[type="checkbox"]:focus {
                outline: none;
                box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.2);
            }

        /* Validation Messages */
        .form-group .text-red-600 {
            font-size: 0.875rem;
            color: #dc2626; /* Red for errors, consistent with other forms */
        }

    .validation-summary {
        font-size: 0.875rem;
        color: #dc2626;
        text-align: center;
    }

    /* Submit Button */
    .login-btn {
        width: 100%;
        background: linear-gradient(to right, #f59e0b, #d97706); /* Amber gradient */
        color: #ffffff;
        font-weight: 600;
        padding: 0.75rem;
        border-radius: 50px;
        border: none;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .login-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(245, 158, 11, 0.4);
            background: #b45309; /* Darker amber on hover */
        }

    /* Register Link */
    .register-link {
        font-size: 0.875rem;
        color: #d97706; /* Amber to match button */
        transition: color 0.3s ease;
    }

        .register-link:hover {
            color: #92400e; /* Darker amber on hover */
            text-decoration: underline;
        }

    /* Dark Mode Adjustments */
    .dark .login-container {
        background: linear-gradient(180deg, #4b5563, #2d3748); /* Darker shades for contrast */
    }

    .dark .login-card {
        background: #2d3748; /* Dark gray to match home page dark mode */
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.3);
    }

        .dark .login-card h2,
        .dark .form-group label {
            color: #fefce8; /* Light amber for text */
        }

    .dark .form-group input[type="email"],
    .dark .form-group input[type="password"] {
        background: #4b5563; /* Darker background for inputs */
        border-color: #6b7280;
        color: #e2e8f0; /* Light gray text */
    }

        .dark .form-group input[type="email"]:focus,
        .dark .form-group input[type="password"]:focus {
            border-color: #f59e0b; /* Light amber border on focus */
            box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.3);
        }

    .dark .form-group input[type="checkbox"] {
        accent-color: #f59e0b;
        border-color: #6b7280;
    }

        .dark .form-group input[type="checkbox"]:focus {
            box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.3);
        }

    .dark .login-btn {
        background: linear-gradient(to right, #d97706, #b45309);
    }

        .dark .login-btn:hover {
            background: #92400e;
        }

    .dark .register-link {
        color: #f59e0b; /* Light amber in dark mode */
    }

        .dark .register-link:hover {
            color: #fefce8;
        }
</style>

<div class="flex items-center justify-center min-h-[calc(100vh-200px)]">
    <div class="bg-amber-50 rounded-lg shadow-lg p-8 max-w-md w-full">
        <h2 class="text-2xl font-bold text-amber-900 mb-6 text-center">Login to Pustakalaya</h2>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-red-600 mb-4 text-center"></div>

            <div class="form-group mb-4">
                <label asp-for="Email" class="block text-gray-700 mb-2"></label>
                <input asp-for="Email" class="form-control w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-red-600 text-sm"></span>
            </div>

            <div class="form-group mb-4">
                <label asp-for="Password" class="block text-gray-700 mb-2"></label>
                <input asp-for="Password" class="form-control w-full p-3 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-amber-500" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-red-600 text-sm"></span>
            </div>

            <div class="form-group mb-4 flex items-center">
                <input asp-for="RememberMe" class="h-4 w-4 text-amber-600 focus:ring-amber-500 border-gray-300 rounded" />
                <label asp-for="RememberMe" class="ml-2 text-gray-700"></label>
            </div>

            <button type="submit" class="w-full bg-amber-600 text-white font-semibold py-3 rounded-lg hover:bg-amber-700 transition duration-300">Login</button>

            <div class="mt-4 text-center">
                <a href="/Account/Register" class="text-amber-600 hover:underline">Don't have an account? Register here</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}