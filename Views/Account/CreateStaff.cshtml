@model Pusthakalaya.Models.CreateStaffViewModel

@{
    ViewData["Title"] = "Create Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Form Container */
    .create-staff-container {
        max-width: 600px;
        margin: 0 auto;
        background: #fefce8; /* Light amber to match home page */
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
    }

        /* Heading */
        .create-staff-container h2 {
            font-size: 1.875rem; /* 2xl equivalent */
            font-weight: 700;
            color: #92400e; /* Dark amber-brown to match hero heading */
            margin-bottom: 1.5rem;
            text-align: center;
        }

    /* Form */
    .create-staff-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    /* Form Group */
    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

        /* Labels */
        .form-group label {
            font-size: 1rem;
            font-weight: 600;
            color: #4b5563; /* Dark gray to match hero subtitle */
        }

        /* Inputs */
        .form-group input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #d1d5db; /* Light gray border */
            border-radius: 8px;
            font-size: 1rem;
            color: #2d3748; /* Dark gray text */
            background: #ffffff;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-group input:focus {
                outline: none;
                border-color: #f5e6b8; /* Light amber border on focus */
                box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.2); /* Amber focus ring */
            }

        /* Validation Messages */
        .form-group .text-danger {
            font-size: 0.875rem;
            color: #dc2626; /* Red for errors */
        }

    .validation-summary {
        font-size: 0.875rem;
        color: #dc2626;
        text-align: center;
    }

    /* Submit Button */
    .submit-btn {
        background: linear-gradient(to right, #f59e0b, #d97706); /* Amber gradient */
        color: #ffffff;
        font-weight: 600;
        padding: 0.75rem 1.5rem;
        border-radius: 50px;
        border: none;
        transition: all 0.3s ease;
        text-align: center;
        cursor: pointer;
    }

        .submit-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(245, 158, 11, 0.4);
            background: #b45309; /* Darker amber on hover */
        }

    /* Dark Mode Adjustments */
    .dark .create-staff-container {
        background: #2d3748; /* Dark gray to match home page dark mode */
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.3);
    }

        .dark .create-staff-container h2,
        .dark .form-group label {
            color: #fefce8; /* Light amber for text */
        }

    .dark .form-group input {
        background: #4b5563; /* Darker background for inputs */
        border-color: #6b7280;
        color: #e2e8f0; /* Light gray text */
    }

        .dark .form-group input:focus {
            border-color: #f59e0b; /* Light amber border on focus */
            box-shadow: 0 0 0 3px rgba(245, 158, 11, 0.3);
        }

    .dark .submit-btn {
        background: linear-gradient(to right, #d97706, #b45309);
    }

        .dark .submit-btn:hover {
            background: #92400e;
        }
</style>
<h2 class="text-2xl font-bold text-amber-900 mb-4">Create Staff</h2>

<form asp-action="CreateStaff" method="post">
    <div asp-validation-summary="All" class="text-danger mb-4"></div>

    <div class="form-group mb-4">
        <label asp-for="FirstName" class="block text-gray-700"></label>
        <input asp-for="FirstName" class="form-control w-full p-2 border rounded" />
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="LastName" class="block text-gray-700"></label>
        <input asp-for="LastName" class="form-control w-full p-2 border rounded" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="Email" class="block text-gray-700"></label>
        <input asp-for="Email" class="form-control w-full p-2 border rounded" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group mb-4">
        <label asp-for="TemporaryPassword" class="block text-gray-700"></label>
        <input asp-for="TemporaryPassword" class="form-control w-full p-2 border rounded" />
        <span asp-validation-for="TemporaryPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="bg-amber-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-amber-700">Create Staff</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}