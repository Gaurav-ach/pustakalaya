@model Pusthakalaya.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Register Container */
    .register-container {
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: calc(100vh - 200px);
        background: linear-gradient(180deg, #fefce8, #f5e6b8); /* Light amber gradient to match home page */
    }

    .register-card {
        background: #fefce8; /* Light amber to match home page */
        border-radius: 12px;
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.1);
        padding: 2rem;
        max-width: 400px; /* Consistent with login form */
        width: 100%;
        border: 1px solid rgba(43, 108, 176, 0.2); /* Subtle blue border to tie into nav */
    }

        /* Heading */
        .register-card h2 {
            font-size: 1.875rem; /* 2xl equivalent */
            font-weight: 700;
            color: #92400e; /* Dark amber-brown to match hero heading */
            margin-bottom: 1.5rem;
            text-align: center;
        }

    /* Form */
    .register-form {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    /* Form Group */
    .form-group {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
    }

        /* Labels */
        .form-group label {
            font-size: 1rem;
            font-weight: 600;
            color: #4b5563; /* Dark gray to match hero subtitle */
        }

        /* Inputs */
        .form-group input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #d1d5db; /* Light gray border */
            border-radius: 8px;
            font-size: 1rem;
            color: #2d3748; /* Dark gray text */
            background: #ffffff;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

            .form-group input:hover {
                border-color: #bfdbfe; /* Light blue on hover to tie into nav */
            }

            .form-group input:focus {
                outline: none;
                border-color: #4c51bf; /* Blue border on focus to match nav */
                box-shadow: 0 0 0 3px rgba(76, 81, 191, 0.2); /* Blue focus ring */
            }

        /* Validation Messages */
        .form-group .text-red-600 {
            font-size: 0.875rem;
            color: #dc2626; /* Red for errors, consistent with other forms */
        }

    .validation-summary {
        font-size: 0.875rem;
        color: #dc2626;
        text-align: center;
    }

    /* Submit Button */
    .register-btn {
        width: 100%;
        background: linear-gradient(to right, #2b6cb0, #4c51bf); /* Blue gradient to match nav */
        color: #ffffff;
        font-weight: 600;
        padding: 0.75rem;
        border-radius: 50px;
        border: none;
        transition: all 0.3s ease;
        cursor: pointer;
    }

        .register-btn:hover {
            transform: translateY(-3px);
            box-shadow: 0 6px 16px rgba(76, 81, 191, 0.4);
            background: #1e40af; /* Darker blue on hover */
        }

    /* Login Link */
    .login-link {
        font-size: 0.875rem;
        color: #2b6cb0; /* Blue to match nav */
        transition: color 0.3s ease;
    }

        .login-link:hover {
            color: #4c51bf; /* Lighter blue on hover */
            text-decoration: underline;
        }

    /* Dark Mode Adjustments */
    .dark .register-container {
        background: linear-gradient(180deg, #4b5563, #2d3748); /* Darker shades for contrast */
    }

    .dark .register-card {
        background: #2d3748; /* Dark gray to match home page dark mode */
        box-shadow: 0 6px 16px rgba(0, 0, 0, 0.3);
        border-color: rgba(96, 165, 250, 0.3); /* Light blue border in dark mode */
    }

        .dark .register-card h2,
        .dark .form-group label {
            color: #fefce8; /* Light amber for text */
        }

    .dark .form-group input {
        background: #4b5563; /* Darker background for inputs */
        border-color: #6b7280;
        color: #e2e8f0; /* Light gray text */
    }

        .dark .form-group input:hover {
            border-color: #93c5fd; /* Lighter blue on hover */
        }

        .dark .form-group input:focus {
            border-color: #60a5fa; /* Lighter blue border on focus */
            box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.3);
        }

    .dark .register-btn {
        background: linear-gradient(to right, #1e40af, #2b6cb0); /* Darker blue gradient */
    }

        .dark .register-btn:hover {
            background: #4c51bf;
        }

    .dark .login-link {
        color: #60a5fa; /* Light blue in dark mode */
    }

        .dark .login-link:hover {
            color: #fefce8;
        }
</style>

<div class="register-container">
    <div class="register-card">
        <h2>Register for Pustakalaya</h2>

        <form asp-action="Register" method="post" class="register-form">
            <div asp-validation-summary="All" class="validation-summary"></div>

            <div class="form-group">
                <label asp-for="FirstName"></label>
                <input asp-for="FirstName" placeholder="Enter your first name" />
                <span asp-validation-for="FirstName" class="text-red-600"></span>
            </div>

            <div class="form-group">
                <label asp-for="LastName"></label>
                <input asp-for="LastName" placeholder="Enter your last name" />
                <span asp-validation-for="LastName" class="text-red-600"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" placeholder="Enter your email" />
                <span asp-validation-for="Email" class="text-red-600"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password"></label>
                <input asp-for="Password" placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-red-600"></span>
            </div>

            <div class="form-group">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="text-red-600"></span>
            </div>

            <button type="submit" class="register-btn">Register</button>

            <div class="mt-4 text-center">
                <a href="/Account/Login" class="login-link">Already have an account? Login here</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}